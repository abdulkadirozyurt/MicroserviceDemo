{
  "Routes": [
    {
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "UpstreamPathTemplate": "/api/products/{everything}", // client to gateway path
      "DownstreamPathTemplate": "/{everything}", // gateway to microservice path
      "DownstreamScheme": "http",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "DownstreamHostAndPorts": [
        {
          "Host": "product-container",
          "Port": 8080
        },
        {
          "Host": "product-container2",
          "Port": 8080
        }
      ]
    },
    {
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "UpstreamPathTemplate": "/api/carts/{everything}",
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "cart-container",
          "Port": 8080
        }
      ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5001",
    "RateLimitOptions": {
      // rule, partition by
      "ClientIdHeader": "Oc-Client",
      // "ClientWhitelist": [],
      // management opts
      "EnableRateLimiting": true,
      "EnableHeaders": true,
      // algorithm
      "Limit": 1,
      "Period": "1m",
      "Wait": "3s",
      // extended opts
      "StatusCode": 418,
      "QuotaMessage": "Rate limit quota exceeded.",
      "KeyPrefix": "ocelot-rate-limiting"
    }
  }
}
