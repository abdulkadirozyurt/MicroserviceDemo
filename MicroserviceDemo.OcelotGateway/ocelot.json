{
  "Routes": [
    {
      "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ],
      "UpstreamPathTemplate": "/api/products/{everything}", // client to gateway path
      "DownstreamPathTemplate": "/{everything}", // gateway to microservice path
      "DownstreamScheme": "http",
      "LoadBalancerOptions": {
        "Type": "RoundRobin"
      },
      "DownstreamHostAndPorts": [
        {
          "Host": "product-container",
          "Port": 8080
        },
        {
          "Host": "product-container2",
          "Port": 8080
        }
      ],
      "QoSOptions": {
        "MinimumThroughput": 3, // try count before applying circuit breaker
        "Timeout": 10000, // waiting time value for each requests from downstream (so microservice) response
        "BreakDuration": 30000 // duration for which circuit breaker will be active, so lock requests to microservice for this duration
      }
    },
    {
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "UpstreamPathTemplate": "/api/carts/{everything}",
      "DownstreamPathTemplate": "/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "cart-container",
          "Port": 8080
        }
      ]
    }
  ],



  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5001",
    "RateLimitOptions": {
      // rule, partition by
      "ClientIdHeader": "Test-ocelot",
      // "ClientWhitelist": [],
      // management opts
      "EnableRateLimiting": true,
      "EnableHeaders": true,
      // algorithm
      "Limit": 10,
      "Period": "1m",
      "Wait": "10s",
      // extended opts
      "StatusCode": 418,
      "QuotaMessage": "Rate limit quota exceeded.",
      "KeyPrefix": "ocelot-rate-limiting"
    }
  }
}
